<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MenaMap.company"
             Title="شركات الطوافة">
  <ScrollView>
        <StackLayout Padding="10">
            <SearchBar x:Name="mySearchbar"/>
            <Picker x:Name="myStreet" Title="اختر المطوف"           
             ItemsSource="{Binding metawif}"
             ItemDisplayBinding="{Binding company}"
             SelectedItem="{Binding company}" 
                />
            <Button x:Name="btmap" Text="عرض المخيمات الخريطة" />
     
    </StackLayout>
  </ScrollView>
</ContentPage>